<div class="container">
  <%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
       <div class="row justify-content-center">
      <div class= "col-10">
        <%= render 'shared/errors', obj:article %>
        <div class="form-group row">
          <%= form.label :title, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_field :title,rows:10, class: "form-control"%>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= form.label :description, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.text_area :description,rows:10, class: "form-control"%>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= form.label :category, style: "display: block", class: "col-2 col-form-label"%>
          <div class="col-10">
            <%= form.collection_select :category_ids, Category.all, :id, :name,
                                       { prompt: 'Make your selection from the list below (can be empty)'},
                                       { multiple: true, size: 4, class: 'custom-select' } %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= form.submit class:" btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to articles", articles_path, class:"row justify-content-center"%>
</div>